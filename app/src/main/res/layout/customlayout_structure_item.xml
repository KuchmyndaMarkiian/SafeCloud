<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_margin="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" android:elevation="4dp"
    >
<ImageView
    android:layout_width="54dp"
    android:layout_height="54dp"
    android:padding="6dp"
    style="@style/ImageViewBackground"
    android:layout_marginRight="16dp"
    android:id="@+id/structure_item_icon"
    android:transitionName="@string/transist3"
    android:src="@drawable/ic_folder_white_24px"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="@string/transist1"
            android:id="@+id/structure_item_header"
            android:textColor="@color/darkGrayColorBase"
            android:textSize="18sp"/>
        <TextView
            android:transitionName="@string/transist2"
            android:id="@+id/structure_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGrayColorBase"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
